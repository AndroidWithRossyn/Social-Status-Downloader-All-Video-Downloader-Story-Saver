<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>

        <item name="android:fontFamily">@font/font</item>
        <item name="android:statusBarColor">@color/bg_color_home</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DirectoryAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:fontFamily">@font/font</item>-->
        <item name="android:textColorPrimary">#ffffff</item>

        <!-- navigation icon color -->
        <item name="colorControlNormal">#ffffff</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="UploadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


</resources>
